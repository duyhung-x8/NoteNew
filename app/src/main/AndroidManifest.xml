<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.noterikkei.app">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_note"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.example.noterikkei.app.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.noterikkei.app.AddNoteActivity"
            android:label="@string/app_name"
            android:parentActivityName="com.example.noterikkei.app.MainActivity">
        </activity>
        <activity
            android:name="com.example.noterikkei.app.InsertPictureActivity"
            android:theme="@android:style/Theme.Holo.Light.Dialog"
            android:label="@string/title_activity_insert_picture">
        </activity>
        <activity
            android:name="com.example.noterikkei.app.ChooseColorActivity"
            android:theme="@android:style/Theme.Holo.Light.Dialog"
            android:label="@string/title_activity_choose_color">
        </activity>
    </application>

</manifest>
